<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- style declarations -->
	<style name="ErrorBox">
		<item name="android:textSize">@dimen/font_size_default</item>
		<item name="android:background">@drawable/warning</item>
		<item name="android:layout_marginBottom">@dimen/gutter</item>
		<item name="android:visibility">gone</item>
	</style>
	
	<style name="InfoButton">
		<item name="android:gravity">center</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">@dimen/entity_button_height</item>
		<item name="android:background">@drawable/entity_action_button</item>
		<item name="android:drawableLeft">@drawable/plus</item>
		<item name="android:drawablePadding">@dimen/halfgutter</item>
		<item name="android:text">Participate</item>
		<item name="android:layout_marginLeft">@dimen/halfgutter</item>
		<item name="android:paddingLeft">@dimen/gutter</item>
		<item name="android:paddingRight">@dimen/gutter</item>
	</style>
	
	<style name="InfoDescription">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">3dp</item>
		<item name="android:layout_marginBottom">6dp</item>
		<item name="android:textSize">@dimen/font_size_medium</item>
	</style>

	<style name="InfoSectionHeader">
		<item name="android:background">@drawable/campaign_info_header_bg</item>
		<item name="android:layout_marginTop">@dimen/gutter_thin</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	
	<style name="InfoSectionLabel">
		<item name="android:gravity">right</item>
		<item name="android:textStyle">bold</item>
		<item name="android:padding">6dp</item>
	</style>

	<style name="InfoSectionDivider">
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_width">2px</item>
		<item name="android:background">@drawable/line_divider</item>
		<item name="android:layout_marginTop">6dip</item>
		<item name="android:layout_marginBottom">6dip</item>
	</style>

	<style name="InfoSectionValue">
		<item name="android:drawablePadding">6dp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:padding">6dp</item>
	</style>

	<style name="InfoSectionDetails">
		<item name="android:background">@drawable/campaign_info_details_bg</item>
		<item name="android:padding">@dimen/gutter</item>
		<item name="android:layout_marginBottom">@dimen/gutter</item>
		<item name="android:visibility">gone</item>
	</style>
</resources>
